{
  "hosting": {
    "site": "whiskey-wizardry",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", 
        "destination": "/index.html" 
      },
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin.html"
      }
    ],
    "headers": [
      {
        "source": "/sampleData.json",
        "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
      }
    ]
  }
}
